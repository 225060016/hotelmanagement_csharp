<Window x:Class="HotelApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Hotel Management System" Height="750" Width="1000"
        Background="#F5F7FA">

    <Window.Resources>

        <Style x:Key="ModernDataGrid" TargetType="DataGrid">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#D1D5DB"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="RowBackground" Value="White"/>
            <Setter Property="AlternatingRowBackground" Value="#F9FAFB"/>
            <Setter Property="GridLinesVisibility" Value="Horizontal"/>
            <Setter Property="HorizontalGridLinesBrush" Value="#E5E7EB"/>
            <Setter Property="RowHeaderWidth" Value="0"/>
            <Setter Property="ColumnHeaderHeight" Value="35"/>
            <Setter Property="FontSize" Value="13"/>
        </Style>

        <Style TargetType="DataGridColumnHeader">
            <Setter Property="Background" Value="#F3F4F6"/>
            <Setter Property="Foreground" Value="#374151"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="10,0"/>
            <Setter Property="BorderBrush" Value="#D1D5DB"/>
            <Setter Property="BorderThickness" Value="0,0,0,1"/>
        </Style>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>


        <DockPanel Grid.Row="0" Margin="0,0,0,15">
            <TextBlock Text="Hotel Operations Dashboard" FontSize="26" FontWeight="ExtraBold" Foreground="#1F2937"/>
            <Button Content="+ Add New Room" HorizontalAlignment="Right" Padding="15,7" 
                    Background="#3B82F6" Foreground="White" BorderThickness="0" Cursor="Hand" Click="BtnAddRoom_Click">
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="6"/>
                    </Style>
                </Button.Resources>
            </Button>
        </DockPanel>


        <GroupBox Header="Room Inventory &amp; Status" Grid.Row="1" Margin="0,0,0,15" Padding="12" 
                  BorderBrush="#E5E7EB" BorderThickness="1" Foreground="#4B5563">
            <DockPanel>
                <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" Margin="0,0,0,12">
                    <CheckBox Content="Show Available Only" IsChecked="{Binding ShowOnlyAvailable}" 
                              VerticalAlignment="Center" FontWeight="Medium" Margin="0,0,25,0"/>
                    <TextBlock Text="Room Type:" VerticalAlignment="Center" Margin="0,0,10,0" Foreground="#6B7280"/>
                    <ComboBox Width="160" ItemsSource="{Binding RoomTypes}" SelectedItem="{Binding SelectedTypeFilter}" Padding="5"/>
                </StackPanel>

                <DataGrid x:Name="RoomGrid" ItemsSource="{Binding RoomsView}" 
                          Style="{StaticResource ModernDataGrid}" 
                          AutoGenerateColumns="False" IsReadOnly="True" SelectionMode="Single">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="No" Binding="{Binding RoomNumber}" Width="70"/>
                        <DataGridTextColumn Header="Type" Binding="{Binding RoomType}" Width="120"/>
                        <DataGridTextColumn Header="Daily Rate" Binding="{Binding DailyRate, StringFormat={}{0:C}}" Width="120"/>
                        <DataGridCheckBoxColumn Header="Occupied" Binding="{Binding IsOccupied}" Width="90"/>
                        <DataGridCheckBoxColumn Header="Dirty" Binding="{Binding NeedsCleaning}" Width="90"/>
                    </DataGrid.Columns>
                </DataGrid>
            </DockPanel>
        </GroupBox>


        <Border Grid.Row="2" Background="White" BorderBrush="#E5E7EB" BorderThickness="1" CornerRadius="8" Padding="18" Margin="0,0,0,15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Guest Name:" VerticalAlignment="Center" FontWeight="SemiBold" Foreground="#374151" Margin="0,0,12,0"/>
                    <TextBox x:Name="TxtGuestName" Width="200" Padding="7" BorderBrush="#D1D5DB" Margin="0,0,15,0"/>
                    <Button Content="Reserve Selected Room" Background="#10B981" Foreground="White" 
                            BorderThickness="0" Padding="20,7" FontWeight="Bold" Click="BtnReserve_Click">
                        <Button.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="6"/>
                            </Style>
                        </Button.Resources>
                    </Button>
                </StackPanel>
                <Button Grid.Column="1" Content="Mark as Cleaned" Background="#8B5CF6" Foreground="White" 
                        BorderThickness="0" Padding="20,7" FontWeight="Bold" Click="BtnClean_Click">
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="6"/>
                        </Style>
                    </Button.Resources>
                </Button>
            </Grid>
        </Border>


        <GroupBox Header="Active Bookings History" Grid.Row="3" Padding="12" BorderBrush="#E5E7EB" BorderThickness="1" Foreground="#4B5563">
            <DataGrid x:Name="BookingGrid" ItemsSource="{Binding Bookings}" 
                      Style="{StaticResource ModernDataGrid}"
                      AutoGenerateColumns="False" IsReadOnly="True">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="ID" Binding="{Binding ReservationId}" Width="50"/>
                    <DataGridTextColumn Header="Guest Name" Binding="{Binding GuestName}" Width="150"/>
                    <DataGridTextColumn Header="Room" Binding="{Binding RoomNumber}" Width="70"/>
                    <DataGridTextColumn Header="Check-In" Binding="{Binding CheckInDate, StringFormat=\{0:MM/dd HH:mm\}}" Width="130"/>
                    <DataGridTextColumn Header="Check-Out" Binding="{Binding CheckOutTime, StringFormat=\{0:MM/dd HH:mm\}}" Width="130"/>
                    <DataGridTextColumn Header="Total Fee" Binding="{Binding TotalFee, StringFormat={}{0:C}}" Width="120" FontWeight="Bold"/>
                    <DataGridCheckBoxColumn Header="Completed" Binding="{Binding IsCompleted}" Width="90"/>
                </DataGrid.Columns>
            </DataGrid>
        </GroupBox>


        <Button Grid.Row="4" Content="Finalize Selection &amp; Collect Payment" 
                Background="#EF4444" Foreground="White" FontSize="14" FontWeight="Bold" 
                HorizontalAlignment="Right" Padding="30,12" Margin="0,15,0,0" BorderThickness="0" Click="BtnCheckOut_Click">
            <Button.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="8"/>
                </Style>
            </Button.Resources>
        </Button>
    </Grid>
</Window>