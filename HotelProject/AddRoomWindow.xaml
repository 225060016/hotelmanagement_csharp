<Window x:Class="HotelApp.Views.AddRoomWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add New Room" Height="320" Width="350" WindowStartupLocation="CenterOwner">
    <Grid Margin="20">
        <StackPanel>
            <TextBlock Text="Room Number:" Margin="0,0,0,5" FontWeight="Bold"/>
            <TextBox x:Name="TxtRoomNumber" Margin="0,0,0,15" Padding="5"/>

            <TextBlock Text="Room Type:" Margin="0,0,0,5" FontWeight="Bold"/>
            <ComboBox x:Name="CmbRoomType" Margin="0,0,0,15" Padding="5" SelectionChanged="CmbRoomType_SelectionChanged">
                <ComboBoxItem Content="Standard"/>
                <ComboBoxItem Content="Suite"/>
                <ComboBoxItem Content="King"/>
            </ComboBox>

            <TextBlock Text="Daily Rate:" Margin="0,0,0,5" FontWeight="Bold"/>
            <TextBox x:Name="TxtDailyRate" Margin="0,0,0,25" Padding="5" 
                     IsReadOnly="True" Background="#F0F0F0" Focusable="False"/>

            <UniformGrid Columns="2">
                <Button Content="Save" Margin="0,0,5,0" Padding="10" Background="#27AE60" Foreground="White" Click="BtnSave_Click"/>
                <Button Content="Cancel" Margin="5,0,0,0" Padding="10" Click="BtnCancel_Click"/>
            </UniformGrid>
        </StackPanel>
    </Grid>
</Window>